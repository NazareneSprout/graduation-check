<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="졸업요건 추가"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 기본 정보 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기본 정보"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <!-- 학부/학과 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="학부/학과"
                        android:textSize="14sp"
                        android:textColor="#616161"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinner_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:minHeight="48dp"/>

                    <!-- 트랙 (교양 문서 모드에서는 숨김) -->
                    <LinearLayout
                        android:id="@+id/layout_track"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="트랙"
                            android:textSize="14sp"
                            android:textColor="#616161"
                            android:layout_marginBottom="8dp"/>

                        <Spinner
                            android:id="@+id/spinner_track"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:padding="12dp"
                            android:background="@android:drawable/btn_dropdown"
                            android:minHeight="48dp"/>

                    </LinearLayout>

                    <!-- 학번 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:hint="학번 (예: 2027년도라면 27)"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_cohort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 이전 연도에서 복사 옵션 -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_copy_from_previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이전 연도 졸업요건에서 복사"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_copy_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이전 연도의 졸업요건을 불러와 새 연도로 복사합니다"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 전공 문서 선택 카드 (교양 문서 모드에서는 숨김) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_major_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFF3E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎓 전공 문서 설정"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#E65100"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전공 과목 데이터를 가져올 문서를 선택하세요"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tv_major_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재: 새로 생성"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_major_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전공 문서 선택"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 교양 문서 선택 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_general_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E8F5E9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📚 교양 문서 설정"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="교양 과목 데이터를 가져올 문서를 선택하세요"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tv_general_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재: 새로 생성"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_general_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="교양 문서 선택"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 저장 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="생성"
        android:textSize="16sp"
        app:cornerRadius="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
