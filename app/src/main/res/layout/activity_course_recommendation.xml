<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CourseRecommendationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="수강과목 추천"
            app:titleTextColor="?attr/colorOnPrimary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 설명 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📚 맞춤형 과목 추천"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수강 이력과 졸업 요건을 분석하여\n최적의 과목을 추천해드립니다."
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:alpha="0.8" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 현재 학년/학기 선택 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📅 현재 학년/학기"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 학년과 학기를 선택하세요. 선택한 학년/학기 이하의 과목만 추천됩니다."
                        android:textSize="13sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="16dp" />

                    <!-- 학년/학기 선택 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="현재: "
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorPrimary" />

                        <Spinner
                            android:id="@+id/spinnerGrade"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="학년"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginEnd="16dp" />

                        <Spinner
                            android:id="@+id/spinnerSemester"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="학기"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorPrimary" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 시간표 고려 옵션 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚙️ 추천 옵션"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="12dp" />

                    <!-- 시간표 고려 체크박스 -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkboxConsiderTimetable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="내 시간표 고려하기"
                        android:textSize="15sp"
                        android:checked="true"
                        android:layout_marginBottom="4dp" />

                    <!-- 시간표 고려 설명 -->
                    <TextView
                        android:id="@+id/tvTimetableExplanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ 기존 시간표와 겹치지 않는 과목만 추천합니다"
                        android:textSize="13sp"
                        android:textColor="?attr/colorPrimary"
                        android:paddingStart="32dp"
                        android:paddingEnd="8dp"
                        android:layout_marginBottom="12dp" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 학기 난이도 조절 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📊 학기 난이도 조절"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이번 학기에 수강할 과목의 전체 난이도를 조절하세요"
                        android:textSize="13sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="24dp" />

                    <!-- 현재 난이도 표시 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="현재 난이도: "
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorPrimary" />

                        <TextView
                            android:id="@+id/tvDifficultyLevel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="보통"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:id="@+id/tvDifficultyValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2/3"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary" />

                    </LinearLayout>

                    <!-- 난이도 슬라이더 -->
                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderDifficulty"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:valueFrom="1"
                        android:valueTo="3"
                        android:value="2"
                        android:stepSize="1"
                        app:labelBehavior="gone"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        style="@style/CustomSlider" />

                    <!-- 난이도 레벨 표시 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😊 쉬움"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:gravity="start" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📚 보통"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🔥 어려움"
                            android:textSize="13sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- 난이도 설명 -->
                    <TextView
                        android:id="@+id/tvDifficultyDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="균형잡힌 학습 부담으로 안정적인 학기를 보낼 수 있습니다."
                        android:textSize="12sp"
                        android:textColor="?attr/colorPrimary"
                        android:background="?attr/colorPrimaryContainer"
                        android:padding="12dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 추천 받기 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGetRecommendations"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="AI 추천 받기"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_recommend"
                app:iconGravity="textStart"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Material3.Button.ElevatedButton" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
