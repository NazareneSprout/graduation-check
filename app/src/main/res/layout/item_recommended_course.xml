<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단: 과목명과 카테고리 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="컴퓨터프로그래밍"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_category"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전공필수"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- 중간: 학점 -->
        <TextView
            android:id="@+id/tv_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3학점"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary" />

        <!-- 아코디언 헤더 (대체 과목이 있을 때만 표시) -->
        <LinearLayout
            android:id="@+id/layout_accordion_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_alternatives_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📋 대체 가능 과목"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary" />

            <ImageView
                android:id="@+id/iv_expand_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- 아코디언 내용 (대체 가능 과목 리스트) -->
        <LinearLayout
            android:id="@+id/layout_alternatives_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="?attr/colorSurfaceVariant"
            android:visibility="gone">

            <!-- 대체 과목들이 동적으로 추가됩니다 -->

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
