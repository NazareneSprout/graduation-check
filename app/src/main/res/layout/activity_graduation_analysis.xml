<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".GraduationAnalysisActivity">

    <!-- 메인 컨텐츠 레이어 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- 툴바 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_graduation_analysis"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/white"
            app:navigationIcon="?attr/homeAsUpIndicator" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 메인 컨텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 제목 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="졸업 요건 분석"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- 안내 문구 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정확한 졸업 요건 분석을 위해\n아래 정보를 선택해주세요."
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:layout_marginBottom="40dp" />

            <!-- 학번 선택 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학번"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_student_id"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- 학부 선택 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학부"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_department"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- 트랙 선택 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="트랙"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_track"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:padding="12dp" />

            </LinearLayout>


            <!-- 분석 시작 버튼 -->
            <Button
                android:id="@+id/btn_start_analysis"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="졸업 요건 분석 시작"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

    </LinearLayout>

    <!-- 전체 화면 로딩 오버레이 (화면 절대 중앙에 배치) -->
    <FrameLayout
        android:id="@+id/loading_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <!-- 반투명 검은색 로딩 카드 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="40dp"
            android:background="@drawable/loading_card_background"
            android:elevation="8dp"
            android:minWidth="280dp">

            <!-- 로딩 애니메이션 -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/white" />

            <!-- 로딩 메시지 -->
            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="데이터를 불러오는 중..."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center" />

            <!-- 상세 로딩 설명 -->
            <TextView
                android:id="@+id/loading_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="학번, 학부, 트랙 정보를 가져오고 있어요"
                android:textSize="14sp"
                android:textColor="#CCFFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxWidth="240dp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>