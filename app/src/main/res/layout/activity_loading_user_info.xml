<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- 중앙 로딩 컨테이너 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 로딩 아이콘 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_person"
                    app:tint="?attr/colorOnPrimaryContainer" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 로딩 타이틀 -->
        <TextView
            android:id="@+id/tvLoadingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학적 정보 확인 중"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <!-- 로딩 설명 -->
        <TextView
            android:id="@+id/tvLoadingDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장된 학적 정보를 불러오고 있습니다..."
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- 프로그레스 바 -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:indeterminateTint="?attr/colorPrimary" />

        <!-- 학적 정보 표시 (로딩 완료 후) -->
        <LinearLayout
            android:id="@+id/layoutUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvUserInfoDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25학번 · 신학부 · 신학전공"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="졸업 요건을 확인하고 있습니다..."
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary" />

        </LinearLayout>

    </LinearLayout>

    <!-- 하단 안내 텍스트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잠시만 기다려주세요"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:alpha="0.6"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
