<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 헤더: 학번/학과/트랙 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- 삭제 모드용 체크박스 (기본적으로 숨김) -->
            <CheckBox
                android:id="@+id/cb_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:padding="8dp"
                app:tint="?attr/colorPrimary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021학번 - 컴퓨터공학과"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:id="@+id/tv_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일반트랙"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginBottom="12dp"/>

        <!-- 졸업요건 요약 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="총 이수학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_total_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="130학점"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전공심화"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_major_advanced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="학부공통"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_department_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전공 필수"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_major_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전공 선택"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_major_elective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="교양 필수"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_general_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="교양 선택"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_general_elective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="소양"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_liberal_arts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="자율선택"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_free_elective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="잔여학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

                <TextView
                    android:id="@+id/tv_remaining_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 수정 날짜 -->
        <TextView
            android:id="@+id/tv_updated_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최종 수정: 2025-01-15"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
