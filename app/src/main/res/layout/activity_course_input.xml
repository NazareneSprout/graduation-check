<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_light_background"
    tools:context=".CourseInputActivity">

    <!-- 상단 툴바 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_course_input"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="?attr/colorOnSurface"
            app:title="수강 강의 입력"
            app:titleTextColor="?attr/colorOnSurface"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 메인 컨텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <!-- 학생 정보 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_graduation"
                        app:tint="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:id="@+id/text_view_student_info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="2023학번 IT학부 멀티미디어"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 강의 추가 섹션 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="수강 강의 추가"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="전공/교양 강의를 선택하여 졸업요건을 확인하세요"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="16dp" />

                    <!-- 강의 추가 버튼 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_course"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="강의 추가"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp"
                        app:backgroundTint="?attr/colorPrimary" />

                    <!-- 대체과목 리스트 보기 버튼 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_view_replacement_courses"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="8dp"
                        android:text="대체과목 리스트 보기"
                        android:textSize="13sp"
                        style="@style/Widget.Material3.Button.TonalButton"
                        app:cornerRadius="10dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 등록된 강의 목록 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutlineVariant"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="등록된 강의 목록"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <!-- 전공/교양 세그먼트 버튼 -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="?attr/colorSurfaceVariant">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_major_group"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:text="전공"
                                android:textSize="14sp"
                                app:cornerRadius="10dp"
                                app:backgroundTint="?attr/colorPrimary" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_general_group"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:text="교양"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                style="@style/Widget.Material3.Button.TextButton"
                                app:cornerRadius="10dp"
                                app:backgroundTint="@android:color/transparent" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- 전공 탭들 -->
                    <HorizontalScrollView
                        android:id="@+id/major_tabs_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginBottom="8dp"
                        android:visibility="visible">

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/tab_major_required"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전공필수"
                                android:textSize="13sp"
                                android:checked="true"
                                style="@style/Widget.Material3.Chip.Filter" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/tab_major_elective"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전공선택"
                                android:textSize="13sp"
                                style="@style/Widget.Material3.Chip.Filter" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/tab_major_advanced"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전공심화"
                                android:textSize="13sp"
                                style="@style/Widget.Material3.Chip.Filter" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                    <!-- 교양 탭들 -->
                    <HorizontalScrollView
                        android:id="@+id/general_tabs_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">

                        <com.google.android.material.chip.ChipGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:singleSelection="true"
                            app:selectionRequired="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/tab_general_required"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="교양필수"
                                android:textSize="13sp"
                                android:checked="true"
                                style="@style/Widget.Material3.Chip.Filter" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/tab_general_elective"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="교양선택"
                                android:textSize="13sp"
                                style="@style/Widget.Material3.Chip.Filter" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                    <!-- 선택된 카테고리의 강의 목록 -->
                    <LinearLayout
                        android:id="@+id/layout_selected_category_courses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:minHeight="120dp">

                        <TextView
                            android:id="@+id/text_empty_courses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="강의를 추가해주세요"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center"
                            android:padding="40dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 졸업요건 분석 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_analyze_graduation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="강의를 입력해주세요"
                android:textSize="15sp"
                android:textStyle="bold"
                android:enabled="false"
                app:cornerRadius="12dp"
                app:backgroundTint="?attr/colorPrimary" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
