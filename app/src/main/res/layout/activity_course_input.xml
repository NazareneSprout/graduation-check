<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".CourseInputActivity">

    <!-- 툴바 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_course_input"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/white"
            app:navigationIcon="?attr/homeAsUpIndicator" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 메인 컨텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 학생 정보 표시 -->
            <TextView
                android:id="@+id/text_view_student_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023학번 IT학부 멀티미디어"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:background="@drawable/spinner_background"
                android:padding="16dp"
                android:layout_marginBottom="32dp" />

            <!-- 강의 추가 섹션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/spinner_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📚 수강 강의 추가"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="전공/교양 강의를 선택하여 졸업요건을 확인하세요"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- 강의 추가 버튼 -->
                <Button
                    android:id="@+id/btn_add_course"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="+ 강의 추가"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_primary"
                    android:drawableStart="@android:drawable/ic_input_add"
                    android:drawableTint="@color/white"
                    android:gravity="center" />

            </LinearLayout>

            <!-- 등록된 강의 목록 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 등록된 강의 목록"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <!-- 전공/교양 전환 버튼 컨테이너 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/btn_major_group"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="전공 ▼"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_primary"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/btn_general_group"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="교양 ▷"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/spinner_background"
                        android:textColor="?attr/colorOnSurface"
                        android:gravity="center"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 강의 목록 (탭 방식) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/spinner_background"
                android:padding="16dp"
                android:layout_marginBottom="32dp">


                <!-- 전공 탭들 -->
                <HorizontalScrollView
                    android:id="@+id/major_tabs_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tab_major_required"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="전공필수"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:background="@drawable/folder_tab_active"
                            android:textColor="@color/white"
                            android:layout_marginEnd="4dp"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="12dp"
                            android:gravity="center_horizontal|top"
                            android:minWidth="80dp" />

                        <TextView
                            android:id="@+id/tab_major_elective"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="전공선택"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:background="@drawable/folder_tab_inactive"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginEnd="4dp"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="12dp"
                            android:gravity="center_horizontal|top"
                            android:minWidth="80dp" />

                        <TextView
                            android:id="@+id/tab_major_advanced"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="전공심화"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:background="@drawable/folder_tab_inactive"
                            android:textColor="?attr/colorOnSurface"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="12dp"
                            android:gravity="center_horizontal|top"
                            android:minWidth="80dp" />

                    </LinearLayout>

                </HorizontalScrollView>

                <!-- 교양 탭들 -->
                <HorizontalScrollView
                    android:id="@+id/general_tabs_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tab_general_required"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="교양필수"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:background="@drawable/folder_tab_active"
                            android:textColor="@color/white"
                            android:layout_marginEnd="4dp"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="12dp"
                            android:gravity="center_horizontal|top"
                            android:minWidth="80dp" />

                        <TextView
                            android:id="@+id/tab_general_elective"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="교양선택"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:background="@drawable/folder_tab_inactive"
                            android:textColor="?attr/colorOnSurface"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="12dp"
                            android:gravity="center_horizontal|top"
                            android:minWidth="80dp" />

                    </LinearLayout>

                </HorizontalScrollView>

                <!-- 선택된 카테고리의 강의 목록 -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginTop="8dp"
                    android:background="#F8F9FA"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/layout_selected_category_courses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="📖 강의를 추가해주세요"
                            android:textSize="16sp"
                            android:textColor="@android:color/darker_gray"
                            android:gravity="center"
                            android:padding="40dp"
                            android:id="@+id/text_empty_courses" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <!-- 졸업요건 분석 버튼 -->
            <Button
                android:id="@+id/btn_analyze_graduation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="강의를 입력해주세요"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:enabled="false" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>