<?xml version="1.0" encoding="utf-8"?>
<!-- 20-22학번용 레이아웃 -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 전체 진행률 도넛 차트 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background"
            android:padding="24dp"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📊 전체 진행률"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="20dp" />

            <!-- 도넛 차트 -->
            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="16dp">

                <sprout.app.sakmvp1.DonutChartView
                    android:id="@+id/donut_chart_overall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/text_overall_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75%"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="완료"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_total_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98 / 130 학점"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

        </LinearLayout>

        <!-- 카테고리별 요약 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 카테고리별 요약"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <!-- 학부공통 (20-22학번) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="학부공통"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_department_common_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6/9 학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_department_common_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3학점 부족"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_department_common"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="67"
                android:max="100"
                android:progressTint="?attr/colorPrimary"
                android:progressBackgroundTint="#E0E0E0" />

        </LinearLayout>

        <!-- 전공필수 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전공필수"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_major_required_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18/27 학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_major_required_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9학점 부족"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_major_required"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="67"
                android:max="100"
                android:progressTint="?attr/colorPrimary"
                android:progressBackgroundTint="#E0E0E0" />

        </LinearLayout>

        <!-- 전공선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전공선택"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_major_elective_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/18 학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_major_elective_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3학점 부족"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_major_elective"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="83"
                android:max="100"
                android:progressTint="?attr/colorPrimary"
                android:progressBackgroundTint="#E0E0E0" />

        </LinearLayout>

        <!-- 교양필수 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="교양필수"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_general_required_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18/18 학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_general_required_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="완료"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_general_required"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="100"
                android:max="100"
                android:progressTint="#4CAF50"
                android:progressBackgroundTint="#E0E0E0" />

        </LinearLayout>

        <!-- 교양선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="교양선택"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_general_elective_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6/8 학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_general_elective_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2학점 부족"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_general_elective"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="75"
                android:max="100"
                android:progressTint="?attr/colorPrimary"
                android:progressBackgroundTint="#E0E0E0" />

        </LinearLayout>

        <!-- 소양 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="소양"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_liberal_arts_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4/6 학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_liberal_arts_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2학점 부족"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_liberal_arts"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="67"
                android:max="100"
                android:progressTint="?attr/colorPrimary"
                android:progressBackgroundTint="#E0E0E0" />

        </LinearLayout>

        <!-- 일반선택 (20-22학번) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="일반선택"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_general_selection_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18/20 학점"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/text_general_selection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2학점 부족"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_general_selection"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="90"
                android:max="100"
                android:progressTint="?attr/colorPrimary"
                android:progressBackgroundTint="#E0E0E0" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>