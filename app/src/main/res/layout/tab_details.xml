<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 전공필수 아코디언 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="12dp">

            <!-- 헤더 (클릭 가능) -->
            <LinearLayout
                android:id="@+id/accordion_major_required_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📚 전공필수"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/accordion_major_required_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <!-- 콘텐츠 (접힘/펼침) -->
            <LinearLayout
                android:id="@+id/accordion_major_required_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F5F5F5"
                android:visibility="gone">

                <!-- 동적 콘텐츠가 여기에 추가됩니다 -->

            </LinearLayout>

        </LinearLayout>

        <!-- 전공선택 아코디언 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/accordion_major_elective_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🎯 전공선택"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/accordion_major_elective_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/accordion_major_elective_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F5F5F5"
                android:visibility="gone">

                <!-- 동적 콘텐츠가 여기에 추가됩니다 -->

            </LinearLayout>

        </LinearLayout>

        <!-- 전공심화 아코디언 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/accordion_major_advanced_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🚀 전공심화"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/accordion_major_advanced_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/accordion_major_advanced_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#E8F5E8"
                android:visibility="gone">

                <!-- 동적 콘텐츠가 여기에 추가됩니다 -->

            </LinearLayout>

        </LinearLayout>

        <!-- 학부공통 아코디언 (20-22학번용) -->
        <LinearLayout
            android:id="@+id/accordion_department_common_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/accordion_department_common_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🏛️ 학부공통"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/accordion_department_common_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/accordion_department_common_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#E8F5E8"
                android:visibility="gone">

                <!-- 동적 콘텐츠가 여기에 추가됩니다 -->

            </LinearLayout>

        </LinearLayout>

        <!-- 교양필수 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/card_general_required_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📚 교양필수"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/accordion_general_required_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_general_required_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#F8F9FA"
                android:visibility="gone">

                <!-- 동적 콘텐츠가 여기에 추가됩니다 -->

            </LinearLayout>

        </LinearLayout>

        <!-- 교양선택 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/card_general_elective_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📖 교양선택"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/accordion_general_elective_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_general_elective_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F5F5F5"
                android:visibility="gone">

                <!-- 동적 콘텐츠가 여기에 추가됩니다 -->

            </LinearLayout>

        </LinearLayout>

        <!-- 소양 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_background">

            <LinearLayout
                android:id="@+id/card_liberal_arts_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🎨 소양"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/accordion_liberal_arts_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▶"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_liberal_arts_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F5F5F5"
                android:visibility="gone">

                <!-- 동적 콘텐츠가 여기에 추가됩니다 -->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>