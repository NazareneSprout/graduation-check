<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Firestore에서 불러오기 버튼 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📂 기존 교양 문서에서 불러오기"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_current_document"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 문서: 선택되지 않음"
                        android:textSize="14sp"
                        android:textColor="#1565C0"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다른 학번의 교양 과목을 불러와서 일부만 수정할 수 있습니다"
                        android:textSize="12sp"
                        android:textColor="#64B5F6"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_load_from_firestore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다른 문서 선택"
                        android:textSize="14sp"
                        app:icon="@android:drawable/ic_menu_search"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 교양 과목 섹션 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📚 교양 과목"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_general_course"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="+ 과목 추가"
                            android:textSize="12sp"
                            android:minWidth="0dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 단일 과목과 선택 과목이 구분되어 표시됩니다"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="12dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_general_courses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:minHeight="100dp" />

                    <TextView
                        android:id="@+id/tv_empty_general_courses"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="과목이 없습니다\n위의 버튼으로 추가하거나\nFirestore에서 불러오세요"
                        android:gravity="center"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:visibility="visible" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
