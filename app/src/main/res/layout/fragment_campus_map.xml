<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- 상단 툴바 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="캠퍼스 지도"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 메인 컨텐츠 영역 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 시설 필터 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보고 싶은 시설을 선택하세요"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp"/>

                    <!-- 라디오 버튼 그룹 -->
                    <RadioGroup
                        android:id="@+id/radio_group_facilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rb_none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="없음"
                            android:padding="8dp"
                            android:checked="true"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rb_copier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="복사기"
                            android:padding="8dp"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rb_cafeteria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="식당"
                            android:padding="8dp"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rb_library"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="도서관"
                            android:padding="8dp"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rb_atm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ATM기기"
                            android:padding="8dp"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rb_document_printer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서류출력기"
                            android:padding="8dp"/>

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rb_english_cafe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English Cafe"
                            android:padding="8dp"/>

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 지도 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <!-- 지도 이미지와 마커를 담을 컨테이너 (FrameLayout) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 지도 이미지 컨테이너 -->
                    <FrameLayout
                        android:id="@+id/map_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- 학교 기본 지도 이미지 -->
                        <ImageView
                            android:id="@+id/iv_campus_map"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:background="?attr/colorSurfaceVariant"
                            android:contentDescription="캠퍼스 지도"/>

                        <!-- 복사기 오버레이 -->
                        <ImageView
                            android:id="@+id/iv_overlay_copier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            android:contentDescription="복사기 위치"/>

                        <!-- 식당 오버레이 -->
                        <ImageView
                            android:id="@+id/iv_overlay_cafeteria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            android:contentDescription="식당 위치"/>

                        <!-- 도서관 오버레이 -->
                        <ImageView
                            android:id="@+id/iv_overlay_library"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            android:contentDescription="도서관 위치"/>

                        <!-- ATM 오버레이 -->
                        <ImageView
                            android:id="@+id/iv_overlay_atm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            android:contentDescription="ATM 위치"/>

                        <!-- 서류출력기 오버레이 -->
                        <ImageView
                            android:id="@+id/iv_overlay_document_printer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            android:contentDescription="서류출력기 위치"/>

                        <!-- English Cafe 오버레이 -->
                        <ImageView
                            android:id="@+id/iv_overlay_english_cafe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            android:contentDescription="English Cafe 위치"/>

                    </FrameLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
