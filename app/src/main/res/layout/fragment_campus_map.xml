<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CampusMapFragment">

    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_view_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="4dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보고 싶은 시설을 선택하세요"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/radio_group_facilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rb_none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="없음" />

                <RadioButton
                    android:id="@+id/rb_copier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="복사기" />

                <RadioButton
                    android:id="@+id/rb_cafeteria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="식당" />

                <RadioButton
                    android:id="@+id/rb_library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도서관" />

                <RadioButton
                    android:id="@+id/rb_atm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ATM기기" />

                <RadioButton
                    android:id="@+id/rb_document_printer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서류초력기" />

                <RadioButton
                    android:id="@+id/rb_english_cafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English Cafe" />

            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>