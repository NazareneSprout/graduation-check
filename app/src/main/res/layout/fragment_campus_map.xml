<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- 상단 툴바 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="캠퍼스 지도"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 메인 컨텐츠 영역 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 시설 필터 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보고 싶은 시설을 선택하세요"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp"/>

                    <!-- 체크박스 그리드 -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_copier"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="복사기"
                            android:padding="8dp"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_cafeteria"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="식당"
                            android:padding="8dp"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_library"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="도서관"
                            android:padding="8dp"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_atm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="ATM기기"
                            android:padding="8dp"/>

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/cb_document_printer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="서류출력기"
                            android:padding="8dp"/>

                    </GridLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 지도 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <!-- 지도 이미지와 마커를 담을 컨테이너 (FrameLayout) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 스크롤 가능한 지도 이미지 -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <FrameLayout
                                android:id="@+id/map_container"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <!-- 학교 지도 이미지 (기본 이미지) -->
                                <ImageView
                                    android:id="@+id/iv_campus_map"
                                    android:layout_width="1920dp"
                                    android:layout_height="1440dp"
                                    android:scaleType="fitXY"
                                    android:background="?attr/colorSurfaceVariant"
                                    android:contentDescription="캠퍼스 지도"/>

                                <!-- 마커들을 표시할 컨테이너 -->
                                <FrameLayout
                                    android:id="@+id/markers_container"
                                    android:layout_width="1920dp"
                                    android:layout_height="1440dp"/>

                            </FrameLayout>

                        </ScrollView>

                    </HorizontalScrollView>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
