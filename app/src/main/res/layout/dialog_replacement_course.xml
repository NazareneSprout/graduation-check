<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimaryContainer">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="대체과목 추가"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimaryContainer"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            style="@style/Widget.Material3.Button.IconButton"/>

    </LinearLayout>

    <!-- 스크롤 가능한 컨텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 학부 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학부"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_department"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:drawable/editbox_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- 트랙 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="트랙"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_track"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:drawable/editbox_background"
                android:padding="16dp"
                android:enabled="false"
                android:layout_marginBottom="16dp"/>

            <!-- 연도 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연도"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinner_year"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:drawable/editbox_background"
                android:padding="16dp"
                android:enabled="false"
                android:layout_marginBottom="8dp"/>

            <!-- 과목 로딩 상태 -->
            <TextView
                android:id="@+id/tv_course_loading_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="과목 데이터를 로드 중입니다..."
                android:textSize="12sp"
                android:textColor="?attr/colorSecondary"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- 폐강된 과목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="폐강된 과목"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="8dp"/>

            <!-- 폐강된 과목 검색 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_discontinued_search"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="과목명 검색"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@android:drawable/ic_menu_search"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_discontinued_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:imeOptions="actionSearch"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_search_discontinued"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="검색"
                    android:minWidth="80dp"
                    style="@style/Widget.Material3.Button"/>

            </LinearLayout>

            <!-- 폐강된 과목 검색 결과 (RecyclerView로 대체 가능) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_discontinued_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="150dp"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <!-- 선택된 폐강된 과목 표시 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_selected_discontinued"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorPrimary"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_selected_discontinued_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="데이터베이스설계"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnPrimaryContainer"/>

                        <TextView
                            android:id="@+id/tv_selected_discontinued_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3학점"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnPrimaryContainer"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clear_discontinued"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:icon="@android:drawable/ic_menu_close_clear_cancel"
                        app:iconPadding="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        style="@style/Widget.Material3.Button.IconButton"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 학점 입력 (폐강된 과목이 선택되지 않았을 때만) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_discontinued_course_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="폐강된 과목 학점"
                app:boxBackgroundMode="outline"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_discontinued_course_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutline"
                android:layout_marginVertical="16dp"/>

            <!-- 대체 가능한 과목들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="대체 가능한 과목들"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSecondary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중 하나만 수강해도 인정"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textStyle="italic"/>

            </LinearLayout>

            <!-- 대체 과목 검색 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_replacement_search"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="대체 과목 검색"
                    app:boxBackgroundMode="outline"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@android:drawable/ic_menu_search"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_replacement_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:imeOptions="actionSearch"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_search_replacement"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="검색"
                    android:minWidth="80dp"
                    style="@style/Widget.Material3.Button"/>

            </LinearLayout>

            <!-- 대체 과목 검색 결과 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_replacement_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="150dp"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <!-- 선택된 대체 과목 목록 -->
            <TextView
                android:id="@+id/tv_no_replacements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="대체 과목을 추가해주세요"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAlignment="center"
                android:padding="24dp"
                android:visibility="visible"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_replacements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <!-- 하단 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="end"
        android:background="?attr/colorSurfaceContainerLow">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:minWidth="100dp"
            style="@style/Widget.Material3.Button.TextButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:minWidth="100dp"
            android:layout_marginStart="12dp"
            style="@style/Widget.Material3.Button"/>

    </LinearLayout>

</LinearLayout>
