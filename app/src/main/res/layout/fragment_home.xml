<?xml version="1.0" encoding="utf-8"?>
<!--
    홈 화면 레이아웃 - KB 앱 자산 탭 스타일

    구조:
    - 상단 AppBar (타이틀 + 우측 아이콘들)
    - 캐러셀 슬라이드 배너 (페이지 인디케이터 포함)
    - 4열 아이콘 그리드 (주요 서비스)
    - 추가 카드 (학교꿀팁, 어시스트)
    - 챗봇 FAB
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- 메인 스크롤 컨테이너 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 상단 AppBar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?android:attr/colorBackground"
                android:elevation="0dp"
                app:title="홈"
                app:titleTextColor="?android:attr/textColorPrimary"
                app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge">

                <!-- 우측 장애학생 배려 모드 버튼 -->
                <ImageView
                    android:id="@+id/btn_accessibility_mode"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_accessibility"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="장애학생 배려 모드"
                    app:tint="?android:attr/textColorPrimary" />

            </com.google.android.material.appbar.MaterialToolbar>

            <!-- 기능 카드 캐러셀 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/feature_card_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="800dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:overScrollMode="never" />

                <!-- 기능 카드 인디케이터 -->
                <LinearLayout
                    android:id="@+id/feature_indicator_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/indicator_background"
                    android:gravity="center" />

            </LinearLayout>

            <!-- 주요 서비스 섹션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주요 서비스"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- 아이콘 그리드 1행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="4">

                    <!-- 졸업분석 -->
                    <LinearLayout
                        android:id="@+id/btnFunction1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorPrimaryContainer">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_graduation"
                                app:tint="?attr/colorOnPrimaryContainer"
                                android:contentDescription="졸업분석" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/function_1"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- 자격증 -->
                    <LinearLayout
                        android:id="@+id/btnFunction2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorSecondaryContainer">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_certificate"
                                app:tint="?attr/colorOnSecondaryContainer"
                                android:contentDescription="자격증" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/function_2"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- 수강추천 -->
                    <LinearLayout
                        android:id="@+id/btnFunction3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="?attr/colorTertiaryContainer">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_course_recommend"
                                app:tint="?attr/colorOnTertiaryContainer"
                                android:contentDescription="수강추천" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/function_3"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- 필요서류 -->
                    <LinearLayout
                        android:id="@+id/btnFunction4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="#FFE5E5">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_document"
                                app:tint="#C62828"
                                android:contentDescription="필요서류" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="필요서류"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 아이콘 그리드 2행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="4"
                    android:layout_marginTop="8dp">

                    <!-- 학사일정 -->
                    <LinearLayout
                        android:id="@+id/btnFunction5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="#E3F2FD">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_calendar"
                                app:tint="#1565C0"
                                android:contentDescription="학사일정" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/function_5"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- 학사공지 -->
                    <LinearLayout
                        android:id="@+id/btnFunction6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="#FFF3E0">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_announcement"
                                app:tint="#E65100"
                                android:contentDescription="학사공지" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/function_6"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- 진로취업 -->
                    <LinearLayout
                        android:id="@+id/btnFunction7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="#F3E5F5">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_statistics"
                                app:tint="#6A1B9A"
                                android:contentDescription="진로취업" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/function_7"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- 학식정보 -->
                    <LinearLayout
                        android:id="@+id/btnFunction8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="#E8F5E9">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_restaurant"
                                app:tint="#2E7D32"
                                android:contentDescription="학식정보" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/function_8"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 아이콘 그리드 3행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_marginTop="8dp">

                    <!-- 어시스트 -->
                    <LinearLayout
                        android:id="@+id/btnAssistProgram"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            app:cardCornerRadius="28dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardBackgroundColor="#E0F2F1">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_download"
                                app:tint="#00695C"
                                android:contentDescription="어시스트" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="어시스트"
                            android:textSize="11sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <!-- 빈 공간 (4열 그리드 맞추기) -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="3" />

                </LinearLayout>

            </LinearLayout>

            <!-- 하단 여백 (챗봇 FAB 공간) -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 챗봇 FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_chatbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_chatbot_robot"
        android:contentDescription="챗봇 열기"
        app:tint="@android:color/white" />

</FrameLayout>
