<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SakMvp1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Brand Color -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <!-- Secondary Color -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <!-- Tertiary Color -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <!-- Error Color -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>

        <!-- Outline -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>

        <!-- Inverse Colors -->
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- Other -->
        <item name="android:colorPrimaryDark">@color/md_theme_light_primary</item>
        <item name="android:statusBarColor">@color/md_theme_light_surface</item>
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Enable Material 3 Dynamic Color -->
        <item name="dynamicColorThemeOverlay">@style/ThemeOverlay.Material3.DynamicColors.DayNight</item>
    </style>

    <style name="Theme.SakMvp1" parent="Base.Theme.SakMvp1" />

    <!-- 컴팩트 네비게이션 바 텍스트 스타일 -->
    <style name="CompactBottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <!-- High Contrast Theme -->
    <style name="Theme.SakMvp1.HighContrast" parent="Base.Theme.SakMvp1">
        <!-- High Contrast Colors -->
        <item name="colorPrimary">@color/high_contrast_primary</item>
        <item name="colorOnPrimary">@color/high_contrast_onPrimary</item>
        <item name="colorPrimaryContainer">@color/high_contrast_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/high_contrast_onPrimaryContainer</item>

        <item name="colorSecondary">@color/high_contrast_secondary</item>
        <item name="colorOnSecondary">@color/high_contrast_onSecondary</item>
        <item name="colorSecondaryContainer">@color/high_contrast_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/high_contrast_onSecondaryContainer</item>

        <item name="colorError">@color/high_contrast_error</item>
        <item name="colorOnError">@color/high_contrast_onError</item>
        <item name="colorErrorContainer">@color/high_contrast_errorContainer</item>
        <item name="colorOnErrorContainer">@color/high_contrast_onErrorContainer</item>

        <item name="android:colorBackground">@color/high_contrast_background</item>
        <item name="colorOnBackground">@color/high_contrast_onBackground</item>
        <item name="colorSurface">@color/high_contrast_surface</item>
        <item name="colorOnSurface">@color/high_contrast_onSurface</item>
        <item name="colorSurfaceVariant">@color/high_contrast_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/high_contrast_onSurfaceVariant</item>

        <item name="colorOutline">@color/high_contrast_outline</item>
        <item name="colorOutlineVariant">@color/high_contrast_outlineVariant</item>

        <!-- Status and Navigation Bar -->
        <item name="android:statusBarColor">@color/high_contrast_background</item>
        <item name="android:navigationBarColor">@color/high_contrast_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>