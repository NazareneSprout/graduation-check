<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 효과 -->
    <item
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:radius="6dp" />
            <size
                android:width="16dp"
                android:height="60dp" />
        </shape>
    </item>

    <!-- 흰색 외곽선 -->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="5dp" />
            <size
                android:width="14dp"
                android:height="56dp" />
        </shape>
    </item>

    <!-- 메인 수직 막대 -->
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" />
            <corners android:radius="4dp" />
            <size
                android:width="12dp"
                android:height="52dp" />
        </shape>
    </item>
</layer-list>
